<Tail>:
    orientation: 'horizontal'

    Button:
        text: 'Menu'
        on_press: root.on_menu()

    ToggleButton:
        id: play
        text: 'Play'
        on_state: root.on_toggle(self.state, root.parent.ids.body.ids.board)

    Button:
        text: 'Skip'
        on_press: root.on_skip(root.parent.ids.body.ids.board)

